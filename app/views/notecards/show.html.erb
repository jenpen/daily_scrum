<%= link_to "Back to Board", board_notecards_path %>

<ul>
  <li><%= @notecard.task %></li>
  <li><%= @notecard.date %></li>
  <li><%= @notecard.status %></li>
  <li><%= @notecard.accomplished %></li>
  <li><%= @notecard.to_do %></li>
  <li><%= @notecard.roadblock %></li>
</ul>

<% if current_user && @notecard.user == current_user %>
  <%= link_to "Edit Notecard", edit_board_notecard_path(@notecard) %>
  <%= link_to 'Delete', [@notecard], method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
