<h2>Notecards</h2>
<%= link_to 'View All Boards', boards_path %>

<!-- Show all notecards -->
<% @notecards.each do |notecard| %>
  <ul>
    <li><%= link_to notecard.task, board_notecard_path(notecard.board_id, notecard) %></li>
    <li><p>Date: <%= notecard.date %></p></li>
    <li><p>Task Status: <%= notecard.status %></p></li>
    <li>
      <p>What did you accomplish yesterday?</p>
      <p><%= notecard.accomplished %></p>
    </li>
    <li>
      <p>What are you doing today?</p>
      <p><%= notecard.to_do %></p>
    </li>
    <li>
      <p>What are the roadblocks (if any)?</p>
      <p><%= notecard.roadblock %></p>
    </li>
  </ul>
  <% if current_user && notecard.user == current_user %>
    <button><%= link_to 'Edit Notecard', edit_board_notecard_path(notecard.board_id, notecard) %></button>
  <% end %>
<% end %>
