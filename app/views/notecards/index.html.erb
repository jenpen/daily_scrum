<h1><%= @board.title %></h1>
<h2>Notecards</h2>

<%= link_to "Return to All Boards", boards_path %>


<% @board.notecards.each do |notecard| %>
  <ul>
    <li>
      <p>Task:</p>
      <p><%= link_to notecard.task, board_notecards_path(notecard) %></p>
    </li>
    <li>
      <p>Date:
      <p><%= notecard.date %></p>
    </li>
    <li>
      <p>Task Status:</p>
      <p><%= notecard.status %></p>
    </li>
    <li>
      <p>What did you accomplish yesterday?</p>
      <p><%= notecard.accomplished %></p>
    </li>
    <li>
      <p>What are you doing today?</p>
      <p><%= notecard.to_do %></p>
    </li>
    <li>
      <p>What are the roadblocks (if any)?</p>
      <p><%= notecard.roadblock %></p>
    </li>
  </ul>
  <% if current_user && notecard.user == current_user %>
    <%= link_to 'Edit Notecard', edit_board_notecard_path(@board, notecard) %>
    <%= link_to 'Delete', [@board, notecard], method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
