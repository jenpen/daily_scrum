<!-- Current User : Available Actions -->
<% if current_user %>
  <!-- link_to 'View My Notecards', link to view all current user notecards  -->
  <%= link_to 'View all Notecards', notecards_path %>

  <!-- View All Boards + Add New Board -->
  <h1>All Boards <%= link_to '(+)', new_board_path %></h1>
    <% @boards.each do |board| %>
      <ul>
      <li><%= link_to board.title, board_path(board) %></li>
      <li><%= board.status %></li>
    </ul>
    <% end %>

<!-- Not Current User : View Boards -->
<% else %>
  <!-- View All Boards -->
  <h1>All Boards</h1>
    <% @boards.each do |board| %>
      <ul>
      <li><%= link_to board.title, board_path(board) %></li>
      <li><%= board.status %></li>
    </ul>
    <% end %>
<% end %>
