<div class="col-md-3"></div>

<div class="form col-md-6">
  <div class="well well-lg">
    <%= form_for [@board], :html => {:class => "form-group center"} do |f| %>

    <!-- Board Title -->
    <div class="form-group">
      <%= f.label :title, "Board Title:", class: "col-md-12 control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <!-- Board Status -->
    <div class="form-group">
      <%= f.label :status, "Board Status:", class: "col-md-12 control-label" %>
      <%= f.select(:status, options_for_select(["Not Started", "In Progress", "Complete"]), {class: "form-control"})  %>
    </div>

    <!-- Submit -->
    <div class="form-submit">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </div>
    <% end %>
  </div>
</div>

<div class="col-md-3"></div>
